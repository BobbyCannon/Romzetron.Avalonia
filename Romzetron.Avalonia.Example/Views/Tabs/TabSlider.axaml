                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="8" Grid.Column="1"
                    Theme.ColorTheme="Green"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="8" Grid.Column="2"
                    Theme.ColorTheme="Green"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <!--==================================================-->
                <!-- Amber slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="9" Grid.Column="0"
                    Content="Amber"
                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="9" Grid.Column="1"
                    Theme.ColorTheme="Amber"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="9" Grid.Column="2"
                    Theme.ColorTheme="Amber"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <!--==================================================-->
                <!-- Orange slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="10" Grid.Column="0"
                    Content="Orange"
                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="10" Grid.Column="1"
                    Theme.ColorTheme="Orange"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="10" Grid.Column="2"
                    Theme.ColorTheme="Orange"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <!--==================================================-->
                <!-- Deep Orange slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="11" Grid.Column="0"
                    Content="Deep Orange"
                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="11" Grid.Column="1"
                    Theme.ColorTheme="DeepOrange"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="11" Grid.Column="2"
                    Theme.ColorTheme="DeepOrange"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <!--==================================================-->
                <!-- Brown slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="12" Grid.Column="0"
                    Content="Brown"
                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="12" Grid.Column="1"
                    Theme.ColorTheme="Brown"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="12" Grid.Column="2"
                    Theme.ColorTheme="Brown"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <!--==================================================-->
                <!-- Blue Grey slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="13" Grid.Column="0"
                    Content="Blue Grey"
                    VerticalAlignment="Center" />

                <Slider
                    Grid.Row="13" Grid.Column="1"
                    Theme.ColorTheme="BlueGrey"
                    Value="50"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

                <Slider
                    Grid.Row="13" Grid.Column="2"
                    Theme.ColorTheme="BlueGrey"
                    Value="50"
                    IsEnabled="False"
                    Width="{StaticResource SliderWidthNarrow}"
                    Margin="{StaticResource SliderHorizontalMargin}" />

            </Grid>

        </StackPanel>

    </ScrollViewer>

</UserControl>