<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Romzetron.Avalonia.Example.Views.Tabs.TabToggleSwitch">

    <!--==================================================-->
    <!-- Tab resources. -->
    <!--==================================================-->

    <UserControl.Resources>
        <Thickness x:Key="ToggleSwitchMargin">8,2</Thickness>
    </UserControl.Resources>

    <!--==================================================-->
    <!-- Scroll viewer. -->
    <!--==================================================-->

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">

        <!--==================================================-->
        <!-- Horizontal layout. -->
        <!--==================================================-->

        <StackPanel Orientation="Horizontal">

            <!--==================================================-->
            <!-- Variety of toggle switch examples. -->
            <!--==================================================-->

            <StackPanel
                Margin="8"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Orientation="Vertical"
                Spacing="16">

                <!--==================================================-->
                <!-- Standard toggle switch with default options. -->
                <!--==================================================-->

                <ToggleSwitch />

                <!--==================================================-->
                <!-- Custom message. -->
                <!--==================================================-->

                <ToggleSwitch
                    IsChecked="True"
                    OnContent="Custom On Message"
                    OffContent="Custom Off Message" />

                <!--==================================================-->
                <!-- Unchecked and enabled. -->
                <!--==================================================-->

                <ToggleSwitch
                    HorizontalContentAlignment="Left"
                    Content="Unchecked, Enabled" />

                <!--==================================================-->
                <!-- Unchecked and disabled. -->
                <!--==================================================-->

                <ToggleSwitch
                    HorizontalContentAlignment="Left"
                    Content="Unchecked, Disabled"
                    IsEnabled="False" />

                <!--==================================================-->
                <!-- Checked and enabled. -->
                <!--==================================================-->

                <ToggleSwitch
                    HorizontalContentAlignment="Left"
                    Content="Checked, Enabled"
                    IsChecked="True" />

                <!--==================================================-->
                <!-- Checked and disabled. -->
                <!--==================================================-->

                <ToggleSwitch
                    HorizontalContentAlignment="Left"
                    Content="Checked, Disabled"
                    IsChecked="True"
                    IsEnabled="False" />

            </StackPanel>

            <!--==================================================-->
            <!-- Color theme examples. -->
            <!--==================================================-->

            <Grid
                Margin="8"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                <!--==================================================-->
                <!-- Theme progress bar. -->
                <!--==================================================-->

                <Label
                    Grid.Row="0" Grid.Column="0"
                    Content="Theme"
                    VerticalAlignment="Center"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="0" Grid.Column="1"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="0" Grid.Column="2"
                    IsEnabled="False"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="0" Grid.Column="3"
                    IsChecked="True"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="0" Grid.Column="4"
                    IsChecked="True"
                    IsEnabled="False"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <!--==================================================-->
                <!-- Red slider. -->
                <!--==================================================-->

                <Label
                    Grid.Row="1" Grid.Column="0"
                    Content="Red"
                    VerticalAlignment="Center"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="1" Grid.Column="1"
                    Theme.ColorTheme="Red"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="1" Grid.Column="2"
                    Theme.ColorTheme="Red"
                    IsEnabled="False"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="1" Grid.Column="3"
                    Theme.ColorTheme="Red"
                    IsChecked="True"
                    Margin="{StaticResource ToggleSwitchMargin}" />

                <ToggleSwitch
                    Grid.Row="1" Grid.Column="4"
                    Theme.ColorTheme="Red"
                    IsChecked="True"
                    IsEnabled="False"
                    Margin="{StaticResource ToggleSwitchMargin}" />

